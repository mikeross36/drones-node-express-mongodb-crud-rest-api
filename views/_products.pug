section.products.section.container#products 
    h2.section__title Products
    .products__container 

        each product in products 

            figure.product__card 
                img.product__img(src=`/images/drones/${product.imageCover}` alt=`${product.name}`)
                .product__data
                    h4.product__name= product.name
                    p.product__operating= `Operating difficulty: ${product.operatingDifficulty}`
                    p.product__ratings= `Average ratings: ${product.ratingsAverage}`
                    span.product__price= `price: ${product.price}â‚¬`
                    p.product__summary= product.summary
                    a.button.button--gray.button--small(href=`/product/${product.slug}`) Details 
            
                









