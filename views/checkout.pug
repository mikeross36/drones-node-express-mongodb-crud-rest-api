extends base

block content 

    section.paypal.section.container 
        .pp__container
            form(action="https://www.sandbox.paypal.com/us/cgi-bin/webscr" method="post" target='_blank')
                .row
                    .col
                        h3.title billing address
                        .inputBox
                            span full name :
                            input(type="text", placeholder="your name")
                        .inputBox
                            span email :
                            input(type="email", placeholder="vladimir.monarov@gmail.com")
                        .inputBox
                            span address :
                            input(type="text", placeholder="your address")
                        .inputBox
                            span city :
                            input(type="text", placeholder="your city")
                        .flex
                            .inputBox
                                span state :
                                input(type="text", placeholder="your state")
                            .inputBox
                                span zip code :
                                input(type="text", placeholder="123456")
                    .col
                        h3.title payment
                        .inputBox
                            span cards accepted :
                            img(src="images/card_img.png", alt="")
                        .inputBox
                            span name on card :
                            input(type="text", placeholder="name on card")
                        .inputBox
                            span credit card number :
                            input(type="number", placeholder="1111-2222-3333-4444")
                        .inputBox
                            span exp month :
                            input(type="text", placeholder="january")
                        .flex
                            .inputBox
                                span exp year :
                                input(type="number", placeholder="2022")
                            .inputBox
                                span CVV :
                                input(type="text", placeholder="1234")
                input.submit-btn(type="submit", value="proceed to checkout")

